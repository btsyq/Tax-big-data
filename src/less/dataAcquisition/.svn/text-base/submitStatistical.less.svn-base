.box1{
    height: 442px;
    width: calc(~'50% - 6px');
    margin-right: 12px;
}
.box2{
    height: 442px;
    width: calc(~'50% - 6px');
}
.charts{
    width: 100%;
    height: 360px;
}
.box3{
    margin-top: 12px;
    width: 100%;

    .box_tit{
        margin-bottom: 25px;
    }
    .mytable{
        max-height: 400px;
        overflow-y: auto;
        margin-top: 24px;
        .mycheck{
            top: 5px;
        }
    }
    
    
    .inputs{
        height: 42px;
        line-height: 42px;
        
        .inputsin{
            float: left;
            overflow: hidden;
            &.is1{
                width: 300px; 
            }
            &.is2{
                width: 380px;
            }
            &.is3{
                width: 320px;
            }
            
            span{
                display: inline-block;
                float: left;
                margin-right: 8px;
                &.ml{
                    margin-left: 8px;
                }
                &.twoword{
                    letter-spacing: 27px;
                    margin-right: -20px;
                    &.t2{
                        margin-left: 43px;
                    }
                }
                &.threeword{
                    letter-spacing: 7px;
                    margin-right: 1px;
                }
            }
            .select_box{
                margin-top: 6px;
                .sel_show.small{
                    width: 50px;
                }
                .sel_show.big{
                    width: 156px;
                }
                .sel_show.bigger{
                    width: 234px;
                }
            }
            input[type="text"]{
                border: 1px solid #D2D2D2;
                border-radius: 6px;
                height: 28px;
                display: block;
                float: left;
                margin-top: 6px;
                outline: none;
                text-indent: 10px;
                &.big{
                    width: 185px;
                }
                &.bigger{
                    width: 262px;
                }
                &.small{
                    width: 80px;
                    font-size: 12px;
                    text-indent: 8px;
                }
            }
            .mycheck{
                float: left;
                margin-top: 15px;
                margin-right: 10px;
            }
        }
        button{
            float: left;
            margin-top: 6px;
            margin-left: 12px;
            &.orange{
                margin-left: 383px;
            }
            
        }
    }
    
}
.up_down{
    background: #0084ff;
    background:linear-gradient(to bottom, #00a8ff, #0084ff);
    color:#fff;
    width: 24px;
    height: 24px;
    line-height:24px;
    margin:-3px 0 0 10px;
    float: right;
    cursor:pointer;
    text-align: center;
    border-radius: 6px;
}
.up_down.active{
    -moz-transform:scale(1,-1); 
    -webkit-transform:scale(1,-1); 
    -o-transform:scale(1,-1); 
    transform:scale(1,-1); 
//  filter:FlipV; 
}
#input_box{
    display:none;
}
